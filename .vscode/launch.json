// `interactive` configurations are broken on MacOS because `lldb` does not allow integratedTerminal input within VSCode.
// `piped` configurations are also broken on MacOS, because the pipes for standard I/O do not cooperate with `lldb` options. Thus, this is patched at the code level with `std::freopen`.
// On Linux, `console`: `integratedTerminal` doesn't seem to hide the terminal on launch. This may be a bug.
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "piped.debug.x64",
			"type": "lldb",
			"request": "launch",
			"preLaunchTask": "build.debug.x64",
			"program": "${workspaceFolder}${pathSeparator}.bin${pathSeparator}${relativeFileDirname}${pathSeparator}${fileBasenameNoExtension}.debug.x64",
			"cwd": "${workspaceFolder}${pathSeparator}.bin${pathSeparator}${relativeFileDirname}",
			"args": [
				"<",
				"${workspaceFolder}${pathSeparator}build${pathSeparator}i.default.txt",
				">",
				"${workspaceFolder}${pathSeparator}build${pathSeparator}o.default.txt"
			],
			// Override for extension which does not allow pipe.
			"stdio": [
				"${workspaceFolder}${pathSeparator}build${pathSeparator}i.default.txt",
				"${workspaceFolder}${pathSeparator}build${pathSeparator}o.default.txt",
				null
			],
			"console": "integratedTerminal",
			// Can be used to adjust input location.
			"terminal": "",
			"internalConsoleOptions": "neverOpen",
			"stopAtEntry": false,

			"windows": { "type": "cppvsdbg", "MIMode": "gdb" },
			"osx": { "type": "cppdbg", "MIMode": "lldb" }
		},
		{
			"name": "interactive.debug.x64",
			"type": "cppdbg",
			"request": "launch",
			"preLaunchTask": "build.debug.x64",
			"program": "${workspaceFolder}${pathSeparator}.bin${pathSeparator}${relativeFileDirname}${pathSeparator}${fileBasenameNoExtension}.debug.x64",
			"cwd": "${workspaceFolder}${pathSeparator}.bin${pathSeparator}${relativeFileDirname}",
			"args": [],
			"console": "integratedTerminal",
			"stopAtEntry": false,
			"MIMode": "gdb",
			"internalConsoleOptions": "neverOpen",

			"windows": { "type": "cppvsdbg" },
			"osx": { "MIMode": "lldb" }
		},
		{
			"name": "piped.release.x64",
			"type": "cppdbg",
			"request": "launch",
			"preLaunchTask": "build.release.x64",
			"program": "${workspaceFolder}${pathSeparator}.bin${pathSeparator}${relativeFileDirname}${pathSeparator}${fileBasenameNoExtension}.release.x64",
			"cwd": "${workspaceFolder}${pathSeparator}.bin${pathSeparator}${relativeFileDirname}",
			"args": [
				"<",
				"${workspaceFolder}${pathSeparator}build${pathSeparator}i.default.txt",
				">",
				"${workspaceFolder}${pathSeparator}build${pathSeparator}o.default.txt"
			],
			"console": "internalTerminal",
			"stopAtEntry": false,
			"MIMode": "gdb",
			"internalConsoleOptions": "neverOpen",

			"windows": { "type": "cppvsdbg" },
			"osx": { "MIMode": "lldb" }
		},
		{
			"name": "interactive.release.x64",
			"type": "cppdbg",
			"request": "launch",
			"preLaunchTask": "build.release.x64",
			"program": "${workspaceFolder}${pathSeparator}.bin${pathSeparator}${relativeFileDirname}${pathSeparator}${fileBasenameNoExtension}.release.x64",
			"cwd": "${workspaceFolder}${pathSeparator}.bin${pathSeparator}${relativeFileDirname}",
			"args": [],
			"console": "internalTerminal",
			"stopAtEntry": false,
			"MIMode": "gdb",
			"internalConsoleOptions": "neverOpen",

			"windows": { "type": "cppvsdbg" },
			"osx": { "MIMode": "lldb" }
		}
	]
}
