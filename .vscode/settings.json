/* Recommended settings for VSCode. Copy and customize to `settings.json`. */
{
	"debug.console.closeOnEnd": false,
	"editor.insertSpaces": false,
	"editor.tabSize": 2,

	"files.insertFinalNewline": false,
	"files.eol": "\n",
	"files.associations": {
		"settings.json.DEFAULT": "jsonc"
	},

	"markdown.styles": [".vscode/default.css"],

	"search.useIgnoreFiles": false,

	// "zenMode.hideLineNumbers": false,

	/* On Windows, enables correct __cplusplus define for Intellisense. */
	"C_Cpp.default.compilerArgs": ["/Zc:__cplusplus"],
	"C_Cpp.default.cppStandard": "c++17",
	"C_Cpp.default.includePath": ["include"],

	"[cpp]": {
		"editor.defaultFormatter": "ms-vscode.cpptools",
		"editor.wordWrap": "on"
	},
	"[markdown]": {
		"editor.fontFamily": "'EB Garamond', Georgia, serif"
	}
}
