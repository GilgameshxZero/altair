{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "clean",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "silent", "close": true },

			"command": "make",
			"args": ["clean"]
		},
		{
			"type": "shell",
			"label": "new",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "silent", "close": true },

			"command": "cp",
			"args": [
				"template.cpp",
				"${fileDirname}/${input:new-name}.cpp",
				"&&",
				"xdg-open",
				"${fileDirname}/${input:new-name}.cpp"
			]
		},
		{
			"type": "shell",
			"label": "build.debug.x64",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "silent" },
			"group": { "kind": "build", "isDefault": true },

			"command": "make",
			"args": ["PROJ=${relativeFileDirname}", "BIN=${fileBasenameNoExtension}"],
			"problemMatcher": ["$gcc"],
			"windows": { "problemMatcher": ["$msCompile"] }
		},
		{
			"label": "build.release.x64",
			"type": "shell",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "silent" },
			"group": "build",

			"command": "make",
			"args": [
				"PROJ=${relativeFileDirname}",
				"BIN=${fileBasenameNoExtension}",
				"BUILD=1"
			],
			"problemMatcher": ["$gcc"],
			"windows": { "problemMatcher": ["$msCompile"] }
		}
	],
	"inputs": [
		{
			"id": "new-name",
			"description": "Name:",
			"default": "a",
			"type": "promptString"
		}
	]
}
