{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clean",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"presentation": {
				"clear": true,
				"reveal": "never",
				"showReuseMessage": false,
				"panel": "shared"
			},
			"command": "make",
			"args": ["clean"]
		},
		{
			"label": "new",
			"type": "shell",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": {
				"clear": true,
				"reveal": "never",
				"showReuseMessage": false,
				"panel": "shared"
			},

			"command": "cp",
			"args": [
				"template.cpp",
				"${fileDirname}/${input:new-name}.cpp",
				"&&",
				"xdg-open",
				"${fileDirname}/${input:new-name}.cpp"
			]
		},
		{
			"label": "build.debug.x64",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"presentation": {
				"clear": true,
				"reveal": "never",
				"showReuseMessage": false,
				"panel": "shared"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "make",
			"args": ["PROJ=${relativeFileDirname}", "BIN=${fileBasenameNoExtension}"],
			"problemMatcher": ["$gcc"],
			"windows": {
				"problemMatcher": ["$msCompile"]
			}
		},
		{
			"label": "build.release.x64",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"presentation": {
				"clear": true,
				"reveal": "never",
				"showReuseMessage": false,
				"panel": "shared"
			},
			"group": "build",
			"command": "make",
			"args": [
				"PROJ=${relativeFileDirname}",
				"BIN=${fileBasenameNoExtension}",
				"BUILD=1"
			],
			"problemMatcher": ["$gcc"],
			"windows": {
				"problemMatcher": ["$msCompile"]
			}
		}
	],
	"inputs": [
		{
			"id": "new-name",
			"description": "Name:",
			"default": "a",
			"type": "promptString"
		}
	]
}
