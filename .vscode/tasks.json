{
	"version": "2.0.0",
	"tasks": [
		{
			/* Remove the intermediates directory obj/ and the output directory bin/. */
			"label": "clean",
			"type": "shell",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": {
				"echo": false,
				"clear": true,
				"reveal": "silent",
				"showReuseMessage": false
			},

			"command": "make",
			"args": ["clean"],
			"windows": { "command": "nmake", "args": ["/NOLOGO", "clean"] }
		},
		{
			"label": "new",
			"type": "shell",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": {
				"echo": false,
				"clear": true,
				"reveal": "silent",
				"showReuseMessage": false
			},

			"command": "cp",
			"args": [
				"template.cpp",
				"${fileDirname}/${input:new-name}.cpp",
				"&&",
				"code",
				"-r",
				"${fileDirname}/${input:new-name}.cpp"
			],
			// Seems to make it unlimited.
			"runOptions": { "instanceLimit": 0 }
		},
		{
			/* Build the open file in debug mode. */
			"label": "build.x64.debug",
			"type": "shell",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": {
				"echo": false,
				"clear": true,
				"reveal": "silent",
				"showReuseMessage": false
			},
			"group": { "kind": "build", "isDefault": true },

			"command": "make",
			"args": [
				"PROJECT=${relativeFileDirname}",
				"SOURCES=${fileBasename}",
				"BIN=${fileBasenameNoExtension}"
			],
			"problemMatcher": ["$gcc"],
			"windows": {
				"command": "nmake",
				"args": [
					"/NOLOGO",
					"PROJECT=${relativeFileDirname}",
					"SOURCES=${fileBasename}",
					"BIN=${fileBasenameNoExtension}"
				],
				"problemMatcher": ["$msCompile"]
			}
		},
		{
			/* Build the open file in release mode. */
			"label": "build.x64.release",
			"type": "shell",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": {
				"echo": false,
				"clear": true,
				"reveal": "silent",
				"showReuseMessage": false
			},
			"group": "build",

			"command": "make",
			"args": [
				"PROJECT=${relativeFileDirname}",
				"SOURCES=${fileBasename}",
				"BIN=${fileBasenameNoExtension}",
				"BUILD=1"
			],
			"problemMatcher": ["$gcc"],
			"windows": {
				"command": "nmake",
				"args": [
					"/NOLOGO",
					"PROJECT=${relativeFileDirname}",
					"SOURCES=${fileBasename}",
					"BIN=${fileBasenameNoExtension}",
					"BUILD=1"
				],
				"problemMatcher": ["$msCompile"]
			}
		}
	],
	"inputs": [
		{
			"id": "new-name",
			"description": "Name:",
			"default": "a",
			"type": "promptString"
		}
	]
}
